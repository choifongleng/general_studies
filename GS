            font-size: min(2rem, 5vw);
            margin: 0;
        }
        
        .game-area {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            padding: 5px;
            overflow: hidden;
        }
        
        .players-container {
            display: flex;
            flex-grow: 1;
            gap: 10px;
            min-height: 0;
        }
        
        .player-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            border: 2px solid #ddd;
            border-radius: 8px;
            background-color: white;
            padding: 10px;
            min-width: 0;
        }
        
        .player-title {
            text-align: center;
            font-size: min(1.5rem, 4vw);
            margin-bottom: 5px;
            padding: 5px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }
        
        .word-display {
            text-align: center;
            font-size: min(2rem, 5vw);
            font-weight: bold;
            margin: 5px 0;
            min-height: min(60px, 10vw);
            display: flex;
            justify-content: center;
